<h2>Here are all the gardens in our database.</h2>
<table>
  <tr>
    <th>ID Number</th>
    <th>Garden Name</th>
  </tr>
    <% @garden.each do |g| %>
  <tr>
    <td> <%= g.id %> </td> 
    <td><%= g.name %> </td>
  </tr>
  <% end %>
</table>
<h2>Please select the garden Id you wish to view</h2>
<form action="show_select_garden">
  <input type="submit" value="Click here">
  <input type="hidden" name="table" value="selections">
  <input type="hidden" name="search_for" value="garden_id">
  <input type="text" name="user_search" placeholder="Example: 2"> 
 </form>

